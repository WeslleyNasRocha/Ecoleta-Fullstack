{
  "name": "fullstack-next-level-week",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "nexus:generate": "cross-env NODE_ENV=development ts-node --transpile-only --compiler-options=\"{\\\"module\\\": \\\"commonjs\\\"}\" graphql/schema.ts",
    "prisma:migrate": "prisma migrate save --experimental && prisma migrate up --experimental",
    "prisma:seed": "ts-node --compiler-options=\"{\\\"module\\\": \\\"commonjs\\\"}\" prisma/seed.ts",
    "prisma:generate": "prisma generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@nexus/schema": "0.14.0",
    "@prisma/client": "2.0.0",
    "apollo-server-micro": "2.14.4",
    "graphql": "15.1.0",
    "micro": "9.3.4",
    "micro-cors": "0.1.1",
    "next": "latest",
    "nexus-prisma": "0.14.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@prisma/cli": "2.0.0",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/micro-cors": "0.1.1",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.2.3",
    "cross-env": "7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "ts-node": "8.10.2",
    "typescript": "^3.8.3"
  }
}
